---

<!-- Redesigned footer with improved color scheme and layout -->
<footer class="w-full h-auto bg-[#5e5c60] text-white py-12">
  <div class="max-w-7xl mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-12 mb-12">
      <!-- Company Info -->
      <div
        id="company-section"
        class="flex flex-col items-center md:items-start"
      >
        <img
          id="logo"
          src="/company-logo.png"
          alt="company logo"
          class="max-w-[200px] h-auto opacity-90 mb-4"
        />
        <p class="italic opacity-75 text-center md:text-left text-sm">
          Creating unforgettable experiences since 2015
        </p>
      </div>

      <!-- Quick Links -->
      <div id="quick-links">
        <h4 class="text-[#ed9b40]! font-bold mb-4 uppercase text-sm">
          Quick Links
        </h4>
        <ul class="space-y-2">
          <li>
            <a href="/" class="transition-colors hover:text-[#f5b566]">Home</a>
          </li>
          <li>
            <a
              href="/events_and_booking/events"
              class="transition-colors hover:text-[#f5b566]">Events</a
            >
          </li>
          <li>
            <a href="/#about-us" class="transition-colors hover:text-[#f5b566]"
              >About Us</a
            >
          </li>
          <li>
            <a href="/#find-us" class="transition-colors hover:text-[#f5b566]"
              >Find Us</a
            >
          </li>
          <li>
            <a href="/contact-us" class="transition-colors hover:text-[#f5b566]"
              >Contact Us</a
            >
          </li>
        </ul>
      </div>

      <!-- Contact Information -->
      <div id="contact-info">
        <h4 class="text-[#ed9b40]! font-bold mb-4 uppercase text-sm">
          Contact
        </h4>
        <ul class="space-y-2 text-sm">
          <li class="flex gap-2">
            <span class="font-semibold min-w-12">Phone:</span>
            <a
              href="tel:+63999999999"
              class="transition-colors hover:text-[#f5b566] underline-offset-2 hover:underline"
              >(+63) 999-999-9999</a
            >
          </li>
          <li class="flex gap-2">
            <span class="font-semibold min-w-12">Cell:</span>
            <a
              href="tel:+63999999999"
              class="transition-colors hover:text-[#f5b566] underline-offset-2 hover:underline"
              >(+63) 999-999-9999</a
            >
          </li>
          <li class="flex gap-2">
            <span class="font-semibold min-w-12">Fax:</span>
            <a
              href="tel:+63999999999"
              class="transition-colors hover:text-[#f5b566] underline-offset-2 hover:underline"
              >(+63) 999-999-9999</a
            >
          </li>
          <li class="flex gap-2">
            <span class="font-semibold min-w-12">Email:</span>
            <a
              href="mailto:support@milkuph.com"
              class="transition-colors hover:text-[#f5b566] underline-offset-2 hover:underline"
              >support@milkuph.com</a
            >
          </li>
        </ul>
      </div>

      <!-- Social Media -->
      <div id="socials" class="flex flex-col items-center md:items-start">
        <h4 class="text-[#ed9b40]! font-bold mb-4 uppercase text-sm">
          Follow Us
        </h4>
        <div id="socials-nav" class="flex gap-4">
          <a
            href="#"
            target="_blank"
            class="w-6 h-6 hover:scale-110 transition-all"
            onmouseover="this.querySelector('img').src='/socials_images/facebook/fb_photo_colored.png'"
            onmouseout="this.querySelector('img').src='/socials_images/facebook/fb_photo_black.png'"
            ><img
              src="/socials_images/facebook/fb_photo_black.png"
              alt="facebook"
              class="w-full h-full"
            /></a
          >
          <a
            href="#"
            target="_blank"
            class="w-6 h-6 hover:scale-110 transition-all"
            onmouseover="this.querySelector('img').src='/socials_images/Instagram/IG_logo_colored.png'"
            onmouseout="this.querySelector('img').src='/socials_images/Instagram/IG_logo_black.png'"
            ><img
              src="/socials_images/Instagram/IG_logo_black.png"
              alt="instagram"
              class="w-full h-full"
            /></a
          >
          <a
            href="#"
            target="_blank"
            class="w-6 h-6 hover:scale-110 transition-all"
            onmouseover="this.querySelector('img').src='/socials_images/x/x_logo_white.png'"
            onmouseout="this.querySelector('img').src='/socials_images/x/x_logo_black.png'"
            ><img
              src="/socials_images/x/x_logo_black.png"
              alt="x"
              class="w-full h-full"
            /></a
          >
          <a
            href="#"
            target="_blank"
            class="w-6 h-6 hover:scale-110 transition-all"
            onmouseover="this.querySelector('img').src='/socials_images/LinkedIn/LinkedIn_logo_colored.png'"
            onmouseout="this.querySelector('img').src='/socials_images/LinkedIn/LinkedIn_logo_black.png'"
            ><img
              src="/socials_images/LinkedIn/LinkedIn_logo_black.png"
              alt="linkedin"
              class="w-full h-full"
            /></a
          >
          <a
            href="#"
            target="_blank"
            class="w-6 h-6 hover:scale-110 transition-all"
            onmouseover="this.querySelector('img').src='/socials_images/tiktok/tiktok_logo_colored.png'"
            onmouseout="this.querySelector('img').src='/socials_images/tiktok/tiktok_logo_black.png'"
            ><img
              src="/socials_images/tiktok/tiktok_logo_black.png"
              alt="tiktok"
              class="w-full h-full"
            /></a
          >
        </div>
      </div>
    </div>

    <!-- Improved copyright section with divider -->
    <div class="border-t border-[#aa8f66] border-opacity-30">
      <p id="copyright" class="text-center text-sm opacity-75 pt-8">
        Â© 2025 Milku Beach Resort and Spa. All rights reserved.
      </p>
    </div>
  </div>
</footer>
