---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="en" class="max-w-screen min-h-screen m-0">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Capstone</title>
    <script>
      (function () {
        try {
          var saved = null;
          try {
            saved = localStorage.getItem('theme');
          } catch (e) {
            saved = null;
          }
          var prefersDark =
            typeof window !== 'undefined' &&
            window.matchMedia &&
            window.matchMedia('(prefers-color-scheme: dark)').matches;

          // Respect an explicit saved value. If none, fall back to OS pref.
          if (saved === 'dark') {
            document.documentElement.classList.add('dark');
          } else if (saved === 'light') {
            document.documentElement.classList.remove('dark');
          } else if (prefersDark) {
            document.documentElement.classList.add('dark');
          } else {
            document.documentElement.classList.remove('dark');
          }

          // Listen for user-initiated theme changes so the layout doesn't
          // re-apply a fallback later and override the user's explicit choice.
          if (typeof window !== 'undefined' && window.addEventListener) {
            window.addEventListener('theme-changed', function (ev) {
              try {
                var v =
                  ev && (ev instanceof CustomEvent ? ev.detail : undefined);
                if (v === 'dark') {
                  document.documentElement.classList.add('dark');
                } else if (v === 'light') {
                  document.documentElement.classList.remove('dark');
                }
              } catch (e) {
                /* ignore */
              }
            });
          }
        } catch (e) {
          // ignore errors (privacy modes may throw)
        }
      })();
    </script>
  </head>
  <body class="w-screen min-h-screen m-0">
    <Header />
    <main class="max-w-screen min-h-screen pt-35"><slot /></main>
    <Footer />
  </body>
</html>
